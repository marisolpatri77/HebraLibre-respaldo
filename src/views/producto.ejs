<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Catalogo de productos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat&family=Poppins:ital,wght@0,100;0,400;1,500&family=Roboto:wght@100&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/css/catalogoProducto.css">

    <link href="/css/header-footer.css" rel="stylesheet">
</head>

<body>
    <%- include('./partials/header.ejs')%>
        <main>
            <section class="productos"> <!--src='/img/img_sec1.webp'"-->
                <h3>Productos principales</h3>
                <div class="products_principal">
                    <div class="imgPrinc-carrito">
                        <img id="imagenPrincipal" src="/img/<%= idBuscado.img %>" alt="imagenPrincipal">
                        <a href='/productos/carrito' class="icono-truck"> <i class="fas fa-truck"></i> </a>
                    </div>
                    <div class="contenido_producto">
                        <h4 class="titulo">
                            <%= idBuscado.title %>
                        </h4>
                        <p class="descrpcion_producto">
                            <%= idBuscado.descripcion %>
                        </p>
                        <div class="botones">
                            <a href="/productos/carrito" class="comprar-producto">Agregar al carrito</a>
                            <div class="editar-eliminar">
                                <a href="/productos/edit/<%= idBuscado.id %>" class="editar-producto">Editar</a>
                                <button onclick="eliminarProducto()">Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="imagenes-adicionales">
                    <script>
                        function cambiarImagen(rutaImagen) {
                            document.getElementById("imagenPrincipal").src = rutaImagen;
                        }
                        //  function cambiarEnlace(enlace) {
                        //      var enlaceEditar = document.getElementById("enlaceEditar");
                        //       enlaceEditar.href = enlace;
                        //  }
                    </script>
                    <% for (let i=0; i < 4; i++) { %>
                        <img id="enlaceEditar" src="/img/<%= color[i].img %>" alt="Imagen Adicional <%= i + 1 %>"
                            onclick="cambiarImagen('/img/<%= color[i].img %>')">
                        <% } %>

                </div>
            </section>

        </main>
        <%- include('./partials/footer.ejs')%>
</body>

</html>